<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>README-bin.txt</source>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
            <destName>README.txt</destName>
        </file>
        <file>
            <source>LICENSE.txt</source>
            <outputDirectory></outputDirectory>
        </file>
    </files>
    <fileSets>
        <!--SAD service war-->
        <fileSet>
            <directory>${basedir}/sad-service/target</directory>
            <includes>
                <include>*.war</include>
            </includes>
            <outputDirectory>sad-service</outputDirectory>
        </fileSet>
        <!--twitter-searcher tracker plugin jar, configuration and dependencies-->
        <fileSet>
            <directory>${basedir}/sad-plugins/twitter-searcher/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>sad-plugins/twitter-searcher/target</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/twitter-searcher</directory>
            <includes>
                <include>*.json</include>
            </includes>
            <outputDirectory>sad-plugins/twitter-searcher</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/twitter-searcher/target/lib</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>sad-plugins/twitter-searcher/target/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/twitter-searcher/src/main/resources/visualise</directory>
            <outputDirectory>sad-plugins/twitter-searcher/visualise</outputDirectory>
        </fileSet>
        <!--facebook-collector plugin jar, configuration and dependencies-->
        <fileSet>
            <directory>${basedir}/sad-plugins/facebook-collector/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>sad-plugins/facebook-collector/target</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/facebook-collector</directory>
            <includes>
                <include>*.json</include>
            </includes>
            <outputDirectory>sad-plugins/facebook-collector</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/facebook-collector/target/lib</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>sad-plugins/facebook-collector/target/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/facebook-collector/src/main/resources/visualise</directory>
            <outputDirectory>sad-plugins/facebook-collector/visualise</outputDirectory>
        </fileSet>
        <!--basic-sns-stats plugin jar, configuration and dependencies-->
        <fileSet>
            <directory>${basedir}/sad-plugins/basic-sns-stats/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>sad-plugins/basic-sns-stats/target</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/basic-sns-stats</directory>
            <includes>
                <include>*.json</include>
            </includes>
            <outputDirectory>sad-plugins/basic-sns-stats</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/basic-sns-stats/target/lib</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>sad-plugins/basic-sns-stats/target/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-plugins/basic-sns-stats/src/main/resources/visualise</directory>
            <outputDirectory>sad-plugins/basic-sns-stats/visualise</outputDirectory>
        </fileSet>
        <!--Licenses-->
        <fileSet>
            <directory>${basedir}/sad-service/target/site</directory>
            <includes>
                <include>third-party-report.html</include>
                <include>css/**</include>
                <include>images/**</include>
            </includes>
            <outputDirectory>licences/sad-service</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/sad-service/src/license/extra</directory>
            <includes>
                <include>extra-licences.html</include>
            </includes>
            <outputDirectory>licences/sad-service</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/sad-plugins/twitter-searcher/target/site</directory>
            <includes>
                <include>third-party-report.html</include>
                <include>css/**</include>
                <include>images/**</include>
            </includes>
            <outputDirectory>licences/sad-plugins/twitter-searcher</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/sad-plugins/facebook-collector/target/site</directory>
            <includes>
                <include>third-party-report.html</include>
                <include>css/**</include>
                <include>images/**</include>
            </includes>
            <outputDirectory>licences/sad-plugins/facebook-collector</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/sad-plugins/basic-sns-stats/target/site</directory>
            <includes>
                <include>third-party-report.html</include>
                <include>css/**</include>
                <include>images/**</include>
            </includes>
            <outputDirectory>licences/sad-plugins/basic-sns-stats</outputDirectory>
        </fileSet>

        <!-- sphinx docs -->
        <fileSet>
            <directory>${basedir}/docs/_build/html</directory>
            <outputDirectory>docs</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
